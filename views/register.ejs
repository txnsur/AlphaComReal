<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <title>Register User</title>
</head>
<body>
    <div class="register-form">
        <h1>Register User</h1>
        <form action="/registerUser" method="POST">
            <!-- Campo de email -->
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Enter user email" required tabindex="1">

            <!-- Campo de contraseña -->
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Enter password" required tabindex="2">

            <!-- Selección de tipo de usuario -->
            <label for="userType">User Type</label>
            <select id="userType" name="userType" class="select-css" tabindex="3">
                <!-- Los valores de userType son Admin o Worker, con la descripción de cada tipo -->
                <option value="1">Admin</option>
                <option value="2">Worker</option>
            </select>

            <!-- Campo oculto para registerBy que tomará el valor de la sesión -->
            <input type="hidden" name="registerBy" value="<%= session.userId %>">

            <div class="form-actions">
                <a href="/" class="btn-cancel">Cancel</a>
                <input type="submit" class="btn-save" value="Register">
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <!-- Mostrar alertas dinámicas -->
    <% if (typeof alert !== "undefined") { %>
    <script>
        Swal.fire({
            title: '<%= alertTitle %>',
            text: '<%= alertMessage %>',
            icon: '<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
        }).then(() => {
            window.location = '/<%= ruta %>';
        });
    </script>
    <% } %>
</body>
</html>
